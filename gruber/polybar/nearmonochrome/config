[module/xwindow]
type = internal/xwindow
label = "   %{F#5b5b5b}>%{F-} %title:0:70:...%"
label-maxlen = 500

[module/rofi]
type = custom/script
label-padding = 2
interval = 120
exec = echo "Menu"
click-left = "rofi -show-icons -show drun >/dev/null 2>&1 &"
;click-left = "rofi -location 1 -yoffset 22 -width 30 -show drun -show-icons >/dev/null 2>&1 &"
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/rofitask]
type = custom/script
label-padding = 2
interval = 120
exec = echo "Task"
click-left = "rofi window -show window -show-icons >/dev/null 2>&1 &"
;click-left = "rofi window -location 1 -yoffset 22 -width 30 -show window -show-icons >/dev/null 2>&1 &"
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/rofisesh]
type = custom/script
label-padding = 2
interval = 120
exec = echo "User"
click-left = "rofi_run -l >/dev/null 2>&1 &"
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
format = <label-state> <label-mode>

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10
ws-icon-default = ::

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.alert}
label-mode-foreground = {colors.foreground-alt}

label-focused = %icon%
label-focused-foreground = ${colors.foreground-alt}
label-focused-underline = ${colors.primary}
label-focused-background = ${colors.background
label-focused-padding = 2

label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}
label-unfocused = %icon%
label-unfocused-padding = 2

label-visible = %icon%
label-visible-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-background = ${colors.background}
label-urgent-padding = 2


[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
; blacklist-0 = num lock
; blacklist-1 = caps lock
blacklist-2 = scroll lock


; Available tags:
;   <label-layout> (default)
;   <label-indicator> (default)
format = <label-indicator>
format-spacing = 0

; Available tokens:
;   %layout%
;   %name%
;   %number%
;   Default: %layout%

label-layout = %name%
label-layout-padding = 2
label-layout-background = ${colors.background}
label-layout-foreground = ${colors.foreground}

; Available tokens:	
;   %name%
;   Default: %name%
label-indicator = %name%
label-indicator-padding = 2
label-indicator-background = ${colors.background-alt}
label-indicator-foreground = ${colors.foreground}

[module/updates-arch-combined]
type = custom/script
exec = ~/.config/polybar/custom/updates-arch-combined.sh
interval = 600
label-background = ${colors.alert}
label-foreground = ${colors.white}
label-padding = 2

[module/date]
type = internal/date
interval = 1.0

date = "%A, %d %B %Y" 
date-alt =

time = "%H:%M:%S %p"
time-alt =

format-prefix = " "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-suffix = " "
format-underline = #ff4400


label = %date% - %time%

[module/volume]
type = internal/volume

format-volume = <label-volume><bar-volume>
label-volume = Vol: %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-prefix = "Vol: "
format-muted-foreground = ${colors.foreground-alt}
label-muted = muted

bar-volume-width = 10
;bar-volume-foreground-0 = ${colors.red}
;bar-volume-foreground-1 = ${colors.deep-orange}
;bar-volume-foreground-2 = ${colors.orange}
;bar-volume-foreground-3 = ${colors.amber}
;bar-volume-foreground-4 = ${colors.yellow}
;bar-volume-foreground-5 = ${colors.green}
;bar-volume-foreground-6 = ${colors.lime}
bar-volume-gradient = false
bar-volume-indicator = /
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #fff
bar-volume-fill = -
bar-volume-fill-font = 2
bar-volume-empty = -
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

[module/backlight]
type = internal/xbacklight
; XRandR output to get get values from
; Default: the monitor defined for the running bar
output = LVDS1
enable-scroll = true
; Set Either Bar or Percent
format = <label><bar>

; Available Visuals Label:
; %percentage% (default)
label = Scr: %percentage%% 

; Available Visuals Bar:
bar-width = 10
bar-indicator = /
bar-fill = -
bar-empty = -

bar-fill-gradient = false
bar-fill-foreground = ${colors.foreground}
bar-indicator-foreground = #fff
bar-empty-foreground = ${colors.foreground}




# FOR WHEN ROFISESH NOT AVAILABLE
[module/powermenu]
type = custom/menu

label-open = User
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.background}
label-open-padding = 2
label-close = Cancel
label-close-foreground = ${colors.ready}
label-separator = |
label-separator-foreground = ${colors.ready}

menu-0-0 =  Reboot
menu-0-0-exec = reboot
menu-0-1 =  Power off
menu-0-1-exec = shutdown now
menu-0-2 =  Log out
menu-0-2-exec = i3-msg exit
;menu-0-3 =  Lock
;menu-0-3-exec = lock &


# Additional Modules

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = CPU:
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
format-underline = ${xrdb:color13:#f90000}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = MEM:
format-prefix-foreground = ${colors.foreground}
format-underline = ${xrdb:color13:#4bffdc}
label = %percentage_used:2%%

### SHOW INTERFACE NAMES USING :: ip link show

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-underline = ${xrdb:color11:#55aa55}
format-connected-prefix = "[!]"
format-connected-prefix-foreground = ${colors.ready}
format-connected-prefix-background = ${colors.background}
format-connected-suffix = " "
format-connected-suffix-foreground = ${colors.foreground}
format-connected-suffix-background = ${colors.background}
label-connected = " %local_ip% ↑%upspeed% ↓%downspeed%" 
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}

format-disconnected = <label-disconnected>
format-disconnected-prefix = "[!]"
format-disconnected-underline = ${self.format-connected-underline}
format-disconnected-prefix-foreground = ${colors.alert}
format-disconnected-prefix-background = ${colors.background}
label-disconnected = " %ifname% disconnected"
label-disconnected-foreground = ${colors.foreground}

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected-underline = ${xrdb:color11:#55aa55}
format-connected-prefix = "[!]"
format-connected-prefix-foreground = ${colors.ready}
format-connected-prefix-background = ${colors.background}
format-connected-suffix = " "
format-connected-suffix-foreground = ${colors.foreground}
format-connected-suffix-background = ${colors.background}
label-connected = " %local_ip% ↑%upspeed% ↓%downspeed%" 
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}

format-disconnected = <label-disconnected>
format-disconnected-prefix = "[!]"
format-disconnected-underline = ${self.format-connected-underline}
format-disconnected-prefix-foreground = ${colors.alert}
format-disconnected-prefix-background = ${colors.background}
label-disconnected = " %ifname% disconnected"
label-disconnected-foreground = ${colors.foreground}

[module/TIP]
type = custom/text
content-foreground = ${colors.foreground}
content-background = ${colors.alert}
content = " HELP "
click-left = "notify-send "TERMINAL REQUIRED" "sudo wifi-menu -o""
; Add your own command above

[module/SPACER]
type = custom/text
content = " " 

; "content" has the same properties as "format-NAME"
; content-background = #000
; content-foreground = #fff
content-padding = 0

[module/BREAKER]
type = custom/text
content = "  •  " 

; "content" has the same properties as "format-NAME"
; content-background = #000
; content-foreground = #fff
content-padding = 0

[module/DIVIDER]
type = custom/text
content = " | " 

; "content" has the same properties as "format-NAME"
; content-background = #000
content-foreground = ${colors.ready}
content-padding = 0
