[colors]
background = #1d1f21
background-alt = #cc000000
foreground = #707880
foreground-alt = #fff
primary = #fff
secondary = #000
alert = #bd2c40
ready = #00acc1

; Colours for Vol Gradient
red = #e53935
deep-orange = #f4511e
orange = #fb8c00
amber = #ffb300
yellow = #fdd835
green = #43a047
lime = #c0ca33




[global/wm]
margin-top = 5
margin-bottom = 5

[settings]
; The throttle settings lets the eventloop swallow up til X events
; if they happen within Y millisecond after first event was received.
; This is done to prevent flood of update event.
;
; For example if 5 modules emit an update event at the same time, we really
; just care about the last one. But if we wait too long for events to swallow
; the bar would appear sluggish so we continue if timeout
; expires or limit is reached.
throttle-output = 5
throttle-output-for = 10

; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30

; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true


[bar/top]
wm-restack = i3
monitor-strict = true
bottom = false
height = 23
border-size= 0
border-color= ${colors.background}
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "Overpass Mono:pixelsize=10;2.25"
; font-1 = "NotoEmoji Nerd Font:size=8;2"
line-size = 0
spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

modules-left =  rofi DIVIDER rofitask DIVIDER powermenu SPACER xwindow
modules-center = 
modules-right = date BREAKER volume SPACER DIVIDER SPACER backlight SPACER
cursor-click = pointer
cursor-scroll = pointer

[bar/bottom]
wm-restack = i3
monitor-strict = true
bottom = true
height = 23
border-size= 0
border-color= ${colors.background}
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "Overpass Mono:pixelsize=10;2.25"
; font-1 = "NotoEmoji Nerd Font:size=8;2"
line-size = 0
spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

modules-left =  i3
modules-center = 
modules-right =  keyboard SPACER eth SPACER DIVIDER SPACER wlan BREAKER cpu SPACER memory SPACER

cursor-click = pointer
cursor-scroll = pointer

tray-position = right
tray-padding = 1						
tray-transparent = true
; tray-background = #aa222222

